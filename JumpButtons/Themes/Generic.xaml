<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:JumpButtons">
    <Style TargetType="{x:Type local:DataGridToolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DataGridToolbar}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <!-- First Button -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Previous Button -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Current Row -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Separator -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Total Rows -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Next Button -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Last Button -->
                                <ColumnDefinition Width="10" />
                                <!-- Spacer -->
                                <ColumnDefinition Width="*" />
                                <!-- Filler -->
                            </Grid.ColumnDefinitions>

                            <Button x:Name="PART_FirstButton"
                                    Width="30"
                                    Margin="2"
                                    ToolTip="First Row">
                                <Path Data="M12,4 L4,12 L12,20 M20,4 L12,12 L20,20"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16" />
                            </Button>

                            <Button x:Name="PART_PreviousButton"
                                    Width="30"
                                    Margin="2"
                                    ToolTip="Previous Row"
                                    Grid.Column="1">
                                <Path Data="M15,4 L7,12 L15,20"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12" />
                            </Button>

                            <TextBox x:Name="PART_CurrentRowTextBox"
                                     Width="40"
                                     Margin="2"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Grid.Column="2" />

                            <TextBlock Text=" / "
                                       VerticalAlignment="Center"
                                       Margin="2"
                                       Grid.Column="3" />

                            <TextBlock x:Name="PART_TotalRowsTextBlock"
                                       Margin="2"
                                       VerticalAlignment="Center"
                                       Grid.Column="4" />

                            <Button x:Name="PART_NextButton"
                                    Width="30"
                                    Margin="2"
                                    ToolTip="Next Row"
                                    Grid.Column="5">
                                <Path Data="M9,4 L17,12 L9,20"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12" />
                            </Button>

                            <Button x:Name="PART_LastButton"
                                    Width="30"
                                    Margin="2"
                                    ToolTip="Last Row"
                                    Grid.Column="6">
                                <Path Data="M4,4 L12,12 L4,20 M12,4 L20,12 L12,20"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      Stretch="Uniform"
                                      Width="16"
                                      Height="16" />
                            </Button>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>